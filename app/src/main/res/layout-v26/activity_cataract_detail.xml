<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_cataract_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/all_corner_40dp"
            android:elevation="8dp"
            app:srcCompat="@drawable/diabetik"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="40dp">
            <TextView
                android:id="@+id/tv_cataract_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Katarak"
                android:textSize="16sp"
                android:elevation="0dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardElevation="8dp"
            android:layout_gravity="center_horizontal"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="40dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cataract_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi katarak"
                android:textSize="16sp"
                android:textColor="@color/setting_item"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:maxLines="100"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText,UnusedAttribute"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bg_blue_circle"
                android:backgroundTint="@color/transparent"
                android:elevation="8dp"
                android:text="@string/back"
                android:textColor="#fff"
                app:backgroundTint="@color/blue"
                app:elevation="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>